<script type="text/javascript" src="~/Scripts/Authentication/AuthenticationFunctions.js"></script>

@{
    ViewBag.Title = "Log in ";
}

<div class="login-page-content">
    <div class="login-form-container">
        <h3 class="login-form-title">Login</h3>
        @using (Html.BeginForm("Login", "Authentication", FormMethod.Post,
            new { id = "loginForm", onsubmit = "return validateLoginForm()" }))
        {
            <div class="row">
                <div class="col-lg-12 col-xl-12 col-12">
                    <div class="form-group">
                        <label for="username">Username: </label>
                        @Html.TextBox("username")
                    </div>
                </div>
                <div class="col-lg-12 col-xl-12 col-12">
                    <div class="form-group">
                        <label for="password">Password: </label>
                        @Html.Password("password")
                    </div>
                </div>
                <div class="col-12">
                    <input type="submit" value="Login" class="submit-login btn-primary" />
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="view-result">
                        @ViewBag.LoginResponse
                    </div>
                </div>
            </div>
        }

    </div>
</div>
@using (Html.BeginForm("CreateAccount", "Authentication", FormMethod.Post))
{
    <input type="submit" value="Create Account" class="btn btn-default"/>
}
